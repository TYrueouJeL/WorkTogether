{% extends 'base.html.twig' %}

{% block body %}
    <div class="container py-5">
        {% if userId != null %}
            <div class="alert alert-info text-center fw-bold">Utilisateur connecté : {{ userId }}</div>
        {% else %}
            <div class="alert alert-warning text-center fw-bold">Aucun utilisateur connecté</div>
        {% endif %}

        <h2 class="text-primary text-center my-4">Découvrez nos packs</h2>

        <div class="row g-4">
            {% for pack in packList %}
                {% if pack.enable == true %}
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="card border-0 shadow-lg h-100">
                            <div class="card-header bg-primary text-white text-uppercase text-center fw-bold">
                                {{ pack.name }}
                            </div>

                            <div class="card-body text-center">
                                <p class="card-text fs-5"><strong>{{ pack.nbrUnits }}</strong> unités</p>
                                <p class="card-text text-success fs-4 fw-bold">{{ pack.price }}€/mois</p>
                                <a href="/command/{{ pack.id }}" class="btn btn-outline-primary w-100">Commander</a>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
