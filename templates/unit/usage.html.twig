{% extends 'base.html.twig' %}

{% block title %}Utilisation{% endblock %}

{% block body %}
    <div class="container py-5">
        <h3 class="text-primary mb-4">Changer l'utilisation de l'unité n°{{ unit.id }}</h3>

        <div class="row">
            <div class="col-md-6">
                <h5 class="mb-3">Détails de l'unité :</h5>
                <ul class="list-group mb-3">
                    <li class="list-group-item"><strong>Baie :</strong> {{ unit.bay.reference }}</li>
                    <li class="list-group-item"><strong>Utilisation actuelle :</strong> <span style="color: {{ unit.usage.color }}">{{ unit.usage.type }}</span></li>
                </ul>
            </div>

            <div class="col-md-6">
                <h5 class="mb-3">Changer d'utilisation :</h5>
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_row(form.type, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="/unit/{{ unit.id }}" class="btn btn-secondary">Retour</a>
        </div>
    </div>
{% endblock %}
