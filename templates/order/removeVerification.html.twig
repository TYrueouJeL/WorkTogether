{% extends 'base.html.twig' %}

{% block title %}Résiliation de la commande{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card shadow-sm p-4" style="max-width: 500px; width: 100%;">
            <h2>Résiliation de la commande</h2>

            <p>Voulez-vous vraiment résilier cette commande ?</p>

            <div class="mb-3">
                <a href="/order/{{ order.id }}/remove" class="btn btn-outline-danger">Oui</a>
            </div>
            <div>
                <a href="/order/{{ customerId }}" class="btn btn-outline-success">Non</a>
            </div>
        </div>
    </div>
{% endblock %}